[user]
  name = Harry
  email = harry.robertson@gmail.com
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto
[push]
  default = current
[gc]
  # Don't run gc --auto for me after some commands. 
  # I will run git-gc from time to time by hand.
  auto = 0

[alias]
  co = checkout
  l = log --graph --oneline
  cp = cherry-pick
  hist = log --pretty=format:\"%h %ad | [%an] %s%d\" --graph --date=short
  c = commit
  s = status
  b = branch
  a = add
  d = diff


